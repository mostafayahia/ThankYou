<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/widget_background_color"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/widget_app_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/widget_text_margin"
        android:text="@string/widget_text"
        android:textColor="@color/widget_text_color"
        android:textSize="@dimen/widget_text_size"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/widget_song_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Maher Zain - For The Rest Of My Life | Official Music Video"
        android:textColor="@color/widget_text_color"
        android:textSize="@dimen/widget_text_size"
        android:layout_below="@+id/widget_app_name_text_view"
        android:layout_marginLeft="@dimen/widget_text_margin"
        android:layout_marginRight="@dimen/widget_text_margin"
        android:gravity="center"/>

</RelativeLayout>